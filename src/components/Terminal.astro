</script>

<style>
  .terminal-container {
    width: 100%;
    max-width: 1100px;
    height: 90vh;
    max-height: 800px;
    background: var(--bg-dark);
    border-radius: 12px;
    box-shadow:
      0 0 0 1px rgba(255, 255, 255, 0.1),
      0 25px 50px -12px rgba(0, 0, 0, 0.8),
      0 0 100px rgba(122, 162, 247, 0.1);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    animation: terminalBoot 0.5s ease-out;
  }

  @keyframes terminalBoot {
    0% {
      opacity: 0;
      transform: scale(0.95) translateY(20px);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  /* Terminal Header */
  .terminal-header {
    background: var(--bg-darker);
    padding: 12px 16px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid var(--bg-highlight);
    user-select: none;
  }

  .terminal-buttons {
    display: flex;
    gap: 8px;
    margin-right: 16px;
  }

  .terminal-buttons .btn {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    cursor: pointer;
    transition: opacity 0.2s;
  }

  .terminal-buttons .btn:hover {
    opacity: 0.8;
  }

  .terminal-buttons .close {
    background: var(--red);
  }
  .terminal-buttons .minimize {
    background: var(--yellow);
  }
  .terminal-buttons .maximize {
    background: var(--green);
  }

  .terminal-title {
    flex: 1;
    text-align: center;
    color: var(--comment);
    font-size: 13px;
    font-weight: 500;
  }

  .terminal-tabs {
    display: flex;
    gap: 4px;
  }

  .terminal-tabs .tab {
    padding: 4px 12px;
    background: var(--bg-highlight);
    color: var(--fg-dark);
    border-radius: 4px;
    font-size: 12px;
  }

  .terminal-tabs .tab.active {
    background: var(--blue0);
    color: var(--fg);
  }

  /* Terminal Body */
  .terminal-body {
    flex: 1;
    padding: 20px;
    overflow-y: auto;
    overflow-x: hidden;
    font-size: 14px;
    line-height: 1.6;
    scrollbar-width: thin;
    scrollbar-color: var(--bg-highlight) transparent;
  }

  .terminal-body::-webkit-scrollbar {
    width: 8px;
  }

  .terminal-body::-webkit-scrollbar-track {
    background: transparent;
  }

  .terminal-body::-webkit-scrollbar-thumb {
    background: var(--bg-highlight);
    border-radius: 4px;
  }

  .terminal-body::-webkit-scrollbar-thumb:hover {
    background: var(--comment);
  }

  /* Output styling */
  :global(.output) {
    margin-bottom: 10px;
  }

  :global(.output-line) {
    margin-bottom: 2px;
    word-wrap: break-word;
  }

  :global(.output-block) {
    margin: 10px 0;
  }

  /* Command prompt styling */
  :global(.command-line) {
    display: flex;
    align-items: center;
    margin-bottom: 2px;
  }

  .prompt {
    white-space: nowrap;
    margin-right: 8px;
  }

  .prompt .user {
    color: var(--green);
    font-weight: 600;
  }
  .prompt .at {
    color: var(--comment);
  }
  .prompt .host {
    color: var(--magenta);
    font-weight: 600;
  }
  .prompt .colon {
    color: var(--comment);
  }
  .prompt .path {
    color: var(--cyan);
    font-weight: 600;
  }
  .prompt .dollar {
    color: var(--comment);
    margin-left: 4px;
  }

  :global(.command-text) {
    color: #c0caf5 !important;
  }

  /* Input line */
  .input-line {
    display: flex;
    align-items: center;
    position: relative;
  }

  #command-input {
    flex: 1;
    background: transparent;
    border: none;
    outline: none;
    color: #c0caf5;
    font-family: inherit;
    font-size: inherit;
    caret-color: #9ece6a;
  }

  .cursor {
    display: none;
  }

  /* Status Bar */
  .terminal-statusbar {
    background: var(--blue0);
    padding: 4px 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 12px;
    color: var(--fg);
  }

  .status-left,
  .status-right {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .git-branch {
    color: var(--bg-dark);
    background: var(--green);
    padding: 1px 8px;
    border-radius: 2px;
    font-weight: 600;
  }

  .separator {
    color: var(--fg-dark);
    opacity: 0.5;
  }

  .lang {
    color: var(--fg);
  }

  .help-hint {
    color: var(--fg-dark);
